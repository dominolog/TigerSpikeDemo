<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardElevation="@dimen/cardview_default_elevation"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/username"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:maxLines="2" />

        <TextView
            android:id="@+id/user_description"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:maxLines="3" />


        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            app:flexWrap="wrap"
            app:flexDirection="row">

            <LinearLayout
                android:id="@+id/num_photos_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:tint="@color/light_gray"
                    app:srcCompat="@drawable/ic_photo_black_24dp" />

                <TextView
                    android:id="@+id/num_photos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="sans-serif-light"
                    android:maxLines="1"
                    android:paddingStart="5dp"
                    android:textColor="@color/light_gray" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/num_views_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:tint="@color/light_gray"
                    app:srcCompat="@drawable/ic_visibility_black_24dp" />

                <TextView
                    android:id="@+id/num_views"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="sans-serif-light"
                    android:maxLines="1"
                    android:paddingStart="5dp"
                    android:textColor="@color/light_gray" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/num_followers_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="5dp"
                    android:tint="@color/light_gray"
                    app:srcCompat="@drawable/ic_person_black_24dp" />

                <TextView
                    android:id="@+id/num_followers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:maxLines="1"
                    android:fontFamily="sans-serif-light"
                    android:paddingStart="5dp"
                    android:textColor="@color/light_gray" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/num_following_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="5dp"
                    android:tint="@color/light_gray"
                    app:srcCompat="@drawable/ic_person_black_24dp" />


                <TextView
                    android:id="@+id/num_following"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="sans-serif-light"
                    android:maxLines="1"
                    android:paddingStart="5dp"
                    android:textColor="@color/light_gray" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/location_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="5dp"
                    android:tint="@color/light_gray"
                    app:srcCompat="@drawable/ic_place_black_24dp" />


                <TextView
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="sans-serif-light"
                    android:maxLines="1"
                    android:paddingStart="5dp"
                    android:textColor="@color/light_gray" />

            </LinearLayout>


        </com.google.android.flexbox.FlexboxLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/social_web"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:tint="@color/light_gray"
                android:layout_margin="5dp"
                app:srcCompat="@drawable/ic_web"
                android:foreground="?attr/selectableItemBackground"/>

            <ImageView
                android:id="@+id/social_instagram"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:tint="@color/light_gray"
                android:layout_margin="5dp"
                app:srcCompat="@drawable/ic_instagram"
                android:foreground="?attr/selectableItemBackground"/>

            <ImageView
                android:id="@+id/social_twitter"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:tint="@color/light_gray"
                android:layout_margin="5dp"
                app:srcCompat="@drawable/ic_twitter"
                android:foreground="?attr/selectableItemBackground"/>

            <ImageView
                android:id="@+id/social_facebook"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:tint="@color/light_gray"
                android:layout_margin="5dp"
                app:srcCompat="@drawable/ic_facebook"
                android:foreground="?attr/selectableItemBackground"/>

            <ImageView
                android:id="@+id/social_pinterest"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:tint="@color/light_gray"
                android:layout_margin="5dp"
                app:srcCompat="@drawable/ic_pinterest"
                android:foreground="?attr/selectableItemBackground"/>

            <ImageView
                android:id="@+id/social_mail"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:tint="@color/light_gray"
                android:layout_margin="5dp"
                app:srcCompat="@drawable/ic_email"
                android:foreground="?attr/selectableItemBackground"/>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>